<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:id="@+id/linearLayout">
        <ImageView
            android:background="@drawable/nba_logo"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_weight="2.4"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/head_title"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textColor="@color/nba_white"
            android:gravity="center_horizontal"
            android:textSize="35dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_weight="2.2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/mine_head"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/act_frg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/linearLayout2">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56.0dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:id="@+id/layout_match"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgv_match"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/tab_btn_match" />

            <TextView
                android:id="@+id/tv_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:text="比赛"
                android:textColor="@color/footer_tab_bg_text"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_latest"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgv_latest"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/tab_btn_latest" />

            <TextView
                android:id="@+id/tv_latest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:text="最新"
                android:textColor="@color/footer_tab_bg_text"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_video"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgv_video"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/tab_btn_video" />

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:text="视频"
                android:textColor="@color/footer_tab_bg_text"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_data"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgv_data"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/tab_btn_data" />

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:text="数据"
                android:textColor="@color/footer_tab_bg_text"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_more"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgv_more"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/tab_btn_more" />

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:text="更多"
                android:textColor="@color/footer_tab_bg_text"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>