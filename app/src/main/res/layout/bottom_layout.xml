<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <Button
        android:id="@+id/bottom_match"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/match_sel"
        android:layout_alignTop="@+id/bottom_news"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        />



    <Button
        android:id="@+id/bottom_news"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/news_sel"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bottom_rank"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/rank_sel"
        android:layout_alignTop="@+id/bottom_news"
        android:layout_toRightOf="@+id/bottom_news"
        android:layout_toEndOf="@+id/bottom_news"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp" />


</RelativeLayout>